<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- 根元素 list -->
	<xs:element name="list">
		<xs:complexType>
			<xs:sequence>
				<!-- 可以包含多個 scratchCard -->
				<xs:element name="scratchCard" type="ScratchCardType" minOccurs="1" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- 刮刮樂類型定義 -->
	<xs:complexType name="ScratchCardType">
		<xs:sequence>
			<xs:element name="config" type="ConfigType" />
			<xs:element name="probabilities" type="ProbabilitiesType" />
			<xs:element name="accumulateRewards" type="AccumulateRewardsType" />
			<xs:element name="jackpotRewards" type="JackpotRewardsType" />
		</xs:sequence>
		<!-- 屬性：id, name, enabled -->
		<xs:attribute name="id" type="xs:int" use="required" />
		<xs:attribute name="name" type="xs:string" use="required" />
		<xs:attribute name="enabled" type="xs:boolean" default="true" />
	</xs:complexType>

	<!-- 配置類型 -->
	<xs:complexType name="ConfigType">
		<xs:sequence>
			<xs:element name="price">
				<xs:complexType>
					<xs:attribute name="itemId" type="xs:int" use="required" />
					<xs:attribute name="count" type="xs:long" use="required" />
				</xs:complexType>
			</xs:element>
			<xs:element name="dailyLimit" type="xs:int" />
			<xs:element name="gridSize" type="xs:int" />
		</xs:sequence>
	</xs:complexType>

	<!-- 機率類型 -->
	<xs:complexType name="ProbabilitiesType">
		<xs:sequence>
			<xs:element name="symbol" maxOccurs="unbounded">
				<xs:complexType>
					<xs:attribute name="type" type="xs:string" use="required" />
					<xs:attribute name="chance" type="xs:int" use="required" />
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<!-- 累積獎勵類型 -->
	<xs:complexType name="AccumulateRewardsType">
		<xs:sequence>
			<xs:element name="reward" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="item" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="id" type="xs:int" use="required" />
								<xs:attribute name="amount" type="xs:long" use="required" />
							</xs:complexType>
						</xs:element>
					</xs:sequence>
					<xs:attribute name="count" type="xs:int" use="required" />
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<!-- 大獎池類型 -->
	<xs:complexType name="JackpotRewardsType">
		<xs:sequence>
			<xs:element name="reward" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="item" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="id" type="xs:int" use="required" />
								<xs:attribute name="amount" type="xs:long" use="required" />
							</xs:complexType>
						</xs:element>
					</xs:sequence>
					<xs:attribute name="weight" type="xs:int" use="required" />
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

</xs:schema>